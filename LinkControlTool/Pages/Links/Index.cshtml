@page
@model LinkControlTool.Pages.Links.IndexModel
@{
    string used = "";
    string avaible = "";

        foreach(var item in Model.ListStatus)
        {
          used+=@item.Used;
          avaible+=@item.Avaible;
            
        }
    
}

<br />
<div>
    <h2>    
    IMEI LIST
       
    </h2>

    <div>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="green" class="bi bi-circle-fill" viewBox="0 0 16 16">
            <circle cx="8" cy="8" r="8"/>               
       </svg>
       @used
       @avaible
      
        
       

        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="Red" class="bi bi-circle-fill" viewBox="0 0 16 16">
            <circle cx="8" cy="8" r="8"/>              
       </svg>
        Used:
     
            
   
    </div>

     

</div>



<table class="table">
    <thead>
        <tr>
            <th>Imei</th>
            <th>Status</th>
            <th>LinkDate</th>
          
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.ListLink)
        {
            <tr>
                <td>@item.Imei</td>
                <td>@item.Status</td>
                <td>@item.LinkDate</td>
            </tr>
            
        }
    </tbody>

</table>
